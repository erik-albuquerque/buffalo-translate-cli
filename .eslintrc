{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "prettier",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "none",
        "semi": false,
        "singleQuote": true,
        "arrowParens": "always",
        "bracketSameLine": false,
        "bracketSpacing": true,
        "endOfLine": "lf",
        "singleAttributePerLine": true
      }
    ]
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts"]
    }
  }
}
